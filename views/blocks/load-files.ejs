<div class="modal fade" id="file-loader" tabindex="-1" role="dialog" aria-labelledby="file-loader-title"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Open or create new</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h6>List of items</h4>
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">Title</th>
              <th scope="col">Date</th>
            </tr>
          </thead>
          <tbody>
            <% for(const { id, title, date } of storage) {%>
              <tr onclick="loadFile(<%=id%>)">
                <td><%=title%></td>
                <td><%=date.toString().slice(0, 24)%></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="modal-footer justify-content-center">
        <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fas fa-plus"></i> Create
          new</button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('#file-loader').modal();

  $('#file-loader').on('shown.bs.modal', () => {
    $('#file-loader').trigger('focus');
  });

  function loadFile(id) {
    console.log(`Load file #${id}`);
    $('#file-loader').modal('toggle');
  }
</script>