<div class="modal fade" id="settings-mod" tabindex="-1" role="dialog" aria-labelledby="settings-lab" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="settings-lab">Settings</h5>
        <button class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <form class="form-inline">
          <div class="form-group my-1 w-100">
            <label class="col-6 justify-content-start" for="recipient-name">Animation duration (ms):</label>
            <input type="number" class="form-control" id="animation-duration" min="10">
          </div>
          <div class="form-group my-1 w-100">
            <label class="col-6 justify-content-start" for="message-text">C.u. duration (ms):</label>
            <input type="number" class="form-control" id="cu-duration" min="10">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button class="btn-main" onclick="saveSettings()" data-dismiss="modal">Apply</button>
      </div>
    </div>
  </div>
</div>

<script>
  function saveSettings() {
    animationDuration = parseInt($('#animation-duration').val());
    cuDuration = parseInt($('#cu-duration').val());
  }

  $('#settings-mod').on('show.bs.modal', () => {
    $('#animation-duration').val(animationDuration);
    $('#cu-duration').val(cuDuration);
  });
</script>
